{
  "name": "ad-reporting-frontend",
  "version": "1.0.0-beta",
  "description": "Frontend for AD/Azure AD/O365 Reporting Application",
  "homepage": ".",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-with-types": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --exclude='e2e/**'",
    "test:unit": "vitest --exclude='e2e/**'",
    "test:unit:run": "vitest --run --exclude='e2e/**'",
    "test:unit:watch": "vitest --watch --exclude='e2e/**'",
    "test:coverage": "vitest --coverage --exclude='e2e/**'",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --config=playwright.config.ci.ts --reporter=list,junit --max-failures=10 --timeout=45000",
    "test:e2e:full": "playwright test --reporter=list,junit --max-failures=10",
    "test:e2e:install": "playwright install --with-deps chromium firefox",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=\"CI Chrome\"",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:unit:run && npm run test:e2e"
  },
  "dependencies": {
    "@ant-design/icons": "^6.0.0",
    "@ant-design/plots": "^2.6.3",
    "@azure/msal-react": "^3.0.18",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@reduxjs/toolkit": "^2.8.2",
    "@types/lodash": "^4.17.20",
    "antd": "^5.27.0",
    "axios": "^1.11.0",
    "axios-mock-adapter": "^2.1.0",
    "dayjs": "^1.11.13",
    "lodash": "^4.17.21",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.8.0",
    "recharts": "^3.1.2",
    "socket.io-client": "^4.8.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "http-proxy-middleware": "^3.0.5",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "es2020": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
