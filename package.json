{
  "name": "simpleadminreporter",
  "version": "1.0.0",
  "description": "AD/Azure AD/O365 Reporting Application",
  "private": true,
  "scripts": {
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "clean": "./scripts/cleanup-artifacts.sh",
    "clean:full": "./scripts/cleanup-artifacts.sh --full",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "cd frontend && npx eslint --fix --max-warnings 0"
    ],
    "backend/**/*.{ts,tsx}": [
      "cd backend && npx eslint --fix"
    ]
  }
}