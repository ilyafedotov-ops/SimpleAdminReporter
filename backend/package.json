{
  "name": "ad-reporting-backend",
  "version": "1.0.0-beta",
  "description": "Backend API for AD/Azure AD/O365 Reporting Application",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "build": "tsc && tsc-alias",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit",
    "test:unit": "TEST_TYPE=unit jest --testPathPatterns=\"\\.test\\.ts$\" --testPathIgnorePatterns=\"integration\\.test\\.ts\"",
    "test:integration": "TEST_TYPE=integration jest --testPathPatterns=\"integration\\.test\\.ts$\"",
    "test:all": "./scripts/run-tests.sh all",
    "test:setup": "./scripts/run-tests.sh setup",
    "test:clean": "./scripts/run-tests.sh clean",
    "test:e2e": "./scripts/run-e2e-tests.sh",
    "test:e2e:ci": "TEST_CLEANUP_AFTER_RUN=false ./scripts/run-e2e-tests.sh --format junit --reporters jest-junit --forceExit",
    "test:e2e:auth": "./scripts/run-e2e-tests.sh 'auth.e2e.test.ts'",
    "test:e2e:reports": "./scripts/run-e2e-tests.sh 'reports.e2e.test.ts'", 
    "test:e2e:api": "./scripts/run-e2e-tests.sh 'api.e2e.test.ts'",
    "test:e2e:logs": "./scripts/run-e2e-tests.sh 'logs.e2e.test.ts'",
    "test:e2e:coverage": "./scripts/run-e2e-tests.sh --coverage --coverageDirectory=coverage/e2e",
    "test:e2e:debug": "DEBUG=* ./scripts/run-e2e-tests.sh --verbose --no-cache",
    "lint": "eslint src --ext .ts --report-unused-disable-directives",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/migrate-simple.ts",
    "migrate:debug": "ts-node -r tsconfig-paths/register src/scripts/migrate.ts",
    "migrate:old": "npm run build && node dist/database/migrate.js",
    "seed": "npm run build && node dist/scripts/seed-database.js",
    "seed:dev": "ts-node src/scripts/seed-database.ts",
    "create-admin": "npm run build && node dist/scripts/createAdmin.js",
    "reset-admin-password": "ts-node -r tsconfig-paths/register reset-admin-password.ts",
    "reset-admin-password:sql": "SQL_ONLY=true node reset-admin-password.js",
    "reset-admin-password:dry-run": "DRY_RUN=true ts-node -r tsconfig-paths/register reset-admin-password.ts",
    "test:ad-connection": "npm run build && node dist/scripts/testADConnection.js",
    "test:azure-connection": "npm run build && node dist/scripts/testAzureConnection.js",
    "test:query-system": "ts-node -r tsconfig-paths/register src/scripts/test-query-system.ts",
    "test:api-endpoints": "ts-node -r tsconfig-paths/register src/scripts/test-api-endpoints.ts",
    "test:ldap-integration": "ts-node -r tsconfig-paths/register src/scripts/test-ldap-integration.ts",
    "benchmark:performance": "ts-node -r tsconfig-paths/register src/scripts/performance-benchmark.ts",
    "convert-templates": "tsx scripts/convert-legacy-templates.ts"
  },
  "dependencies": {
    "@azure/identity": "^4.11.1",
    "@azure/msal-node": "^3.7.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^6.14.0",
    "@types/pdfkit": "^0.17.2",
    "@types/socket.io": "^3.0.2",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "ldapts": "^8.0.9",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "rate-limit-redis": "^4.2.2",
    "redis": "^5.8.1",
    "socket.io": "^4.8.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.25",
    "winston": "^3.17.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.1",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "axios-cookiejar-support": "^6.0.4",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "jest-extended": "^6.0.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "tough-cookie": "^5.1.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "test-exclude": "^7.0.1",
    "typeorm": {
      "redis": "^5.8.1"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "active-directory",
    "azure-ad",
    "office365",
    "reporting",
    "ldap",
    "graph-api",
    "docker"
  ],
  "author": "AD Reporting Team",
  "license": "MIT"
}
